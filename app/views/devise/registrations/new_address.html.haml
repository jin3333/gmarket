.signup-header
  .signup-header__
.signup-main
  %h2.signup 商品送付先住所情報入力
  .signup-main__contents
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    = f.label :送付先氏名
    %br/
    .posting_fullname
      .field       
        = f.text_field :posting_first_name, autofocus: true, autocomplete: "posting_first_name"
      .field
        = f.text_field :posting_family_name, autocomplete: "posting_family_name" 
    = f.label :送付先氏名（ふりがな）
    %br/
    .posting_fullname-kana  
      .field      
        = f.text_field :posting_first_name_f, autocomplete: "posting_first_name_f"
      .field
        = f.text_field :posting_family_name_f, autocomplete: "posting_family_name_f"
    .field
      = f.label :郵便番号
      %br/
      = f.text_field :postal_code
    .field
      = f.label :都道府県
      %br/
      = f.text_field :prefectures
      .field
      = f.label :市区町村
      %br/
      = f.text_field :city
    .field
      = f.label :番地
      %br/
      = f.text_field :address
    .field
      = f.label :建物名（任意）
      %br/
      = f.text_field :building
    .field
      = f.label :電話番号（任意）
      %br/
      = f.text_field :telephone
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
