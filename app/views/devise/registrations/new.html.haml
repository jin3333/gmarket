.signup-header
  .signup-header__
.signup-main
  %h2.signup 会員情報入力
  .signup-main__contents
  = form_for(@user, url: user_registration_path) do |f|
    = render "devise/shared/error_messages", resource: @user
    .field
      = f.label :ニックネーム
      %br/
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）フリマ太郎"
    .field
      = f.label :Eメール
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
    .field
      = f.label :パスワード
      - if @minimum_password_length
        %em
          (#{@minimum_password_length}文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上"
    .field
      = f.label :確認用パスワード
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード"
    %h3.text-left 本人確認
    = f.label :お名前（全角）
    %br/
    .fullname
      .field       
        = f.text_field :first_name, autocomplete: "first_name"
      .field
        = f.text_field :family_name, autocomplete: "family_name" 
    = f.label :お名前カナ（全角）
    %br/
    .fullname-kana  
      .field      
        = f.text_field :first_name_kana, autocomplete: "first_name_kana"
      .field
        = f.text_field :family_name_kana, autocomplete: "family_name_kana"
    .field
      = f.label :生年月日
      %br/
      = f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
    .actions
      = f.submit "Next"
  = render "devise/shared/links"

.signup-footer